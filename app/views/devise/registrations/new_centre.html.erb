<script>
    $(document).ready(function() {
        $("#select-input").select2()

    })
    $(document).ready(function(){
        $('[data-toggle="tooltip"]').tooltip();
    });
</script>
<%= link_to '<<Back', :back,:class => 'btn btn-primary' %>
<div class="container text-primary">
<div class="row">
  <div class="panel panel-success col-lg-6 col-lg-offset-3">
    <div class="panel-heading">
      Add Health Care Clinic
    </div>
    <div class="panel-body">
      <%= form_for(resource, as: resource_name, url: centre_sign_up_path) do |f| %>
          <%= devise_error_messages! %>
          <em class="label label-danger">fields marked with (*) are cumpulsory</em>
          <%= f.fields_for :centre do |p| %>

              <div class="form-group ">
                <%= p.label :name,'Name of Clinic', :class=> 'required' %>
                <div class="input-group">
      <span class="input-group-addon ">
          <i class="glyphicon glyphicon-plus"></i></span>
                  <%= p.text_field :name, :autofocus => true, placeholder: 'Clinic Name', class: 'form-control' %>
                </div>
              </div>
              <div class="form-group ">
                <%= p.label :centre_type, :class=> 'required' %>
                <div class="input-group">
      <span class="input-group-addon ">
          <i class="glyphicon glyphicon-briefcase"></i></span>
                  <select id="select-input" name='account[centre_attributes][centre_type_id]' data-placeholder='Select Clinic Type' class="form-control">
                    <% CentreType.order(:name).each do |centre_type| %>
                        <option value="<%=centre_type.id%>"><%=centre_type.name%></option>
                    <% end %>
                  </select>
                </div>
              </div>

          <% end %>
          <div class="form-group ">
            <%= f.label :mobile, :class=> 'required' %>
            <div class="input-group">
      <span class="input-group-addon ">
          <i class="glyphicon glyphicon-phone-alt"></i></span>
              <%= f.telephone_field :mobile, :autofocus => true, class: 'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :email, :class=> 'required'%>
            <div class="input-group">
      <span class="input-group-addon ">
        <i class="glyphicon glyphicon-envelope"></i></span>
              <%= f.email_field :email, class: 'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :password, :class=> 'required' %>
            <% if @validatable %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
            <div class="input-group">
      <span class="input-group-addon ">
        <i class="glyphicon glyphicon-lock"></i></span>
              <%= f.password_field :password, class: 'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, :class=> 'required'%>
            <div class="input-group">
      <span class="input-group-addon ">
          <i class="glyphicon glyphicon-lock"></i></span>

              <%= f.password_field :password_confirmation, class: 'form-control' %>
            </div>
          </div>
          <div class="field">
            <%= f.check_box :terms_of_service ,:acceptance =>{:accept => true}%>
            <%= f.label :terms_of_service,'Accept Terms and Conditions' %></br>
          </div>
          </div>

          <div class="panel-footer">
            <div class="input-group ">

              <%= f.submit 'Sign up', :class => 'btn btn-primary' %>
              <%= link_to "Already have an account, Login", centre_sign_in_path %>

            </div>
      <% end %>
      </div>
      </div>
</div>
</div>
