<diV class="conatiner" style="color:#ff0000 ;  padding:40px; margin:0px">
	<div class="row">
		<div class="col-md-4 offset2" >
		</div>
		
		<div class="col-md-4 offset2">
			<h2>Sign in</h2>
			
			<%= form_for(resource, as: resource_name, url: property_sign_in_path) do |f| %>
			  <%= devise_error_messages! %>
			  
			  <% if resource.errors.any? %>
			  	<div id="error_explanation">
			    	<h2><%= pluralize(resource.errors.count, "error") %> prohibited from being saved:</h2>
			    	<ul>
			    		<% resource.errors.full_messages.each do |msg| %>
			      			<li><%= msg %></li>
			    		<% end %>
			    	</ul>
			  	</div>
			  	<% end %>
			  
			  <div class="field">
			    <%= f.label :login %><em>(email or mobile)</em></br>
			    <%= f.text_field :login %>
			  </div>
			
			  <div class="field">
			    <%= f.label :password %></br>
			    <%= f.password_field :password, autocomplete: "off" %>
			  </div>
			
			  <% if devise_mapping.rememberable? -%>
			    <div class="field">
			      <%= f.check_box :remember_me %>
			      <%= f.label :remember_me %>
			      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  				  	<%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
				  <% end -%>
			    </div>
			  <% end -%>
			
			  <div class="actions">
			    <%= f.submit "Log in" %>
			  </div>
			<% end %>
		
	<%= link_to "Does not have an Account, Add Property", property_sign_up_path %>
	
</div>