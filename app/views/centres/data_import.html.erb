<section class="container" xmlns="http://www.w3.org/1999/html">
  <section class="row">

    <div class="col-sm-6 col-sm-offset-3" >
      <div class="panel panel-default">
        <header class="panel-heading font-bold">
          Import Centre list through Excel
        </header>

        <div class="panel-body">


          <%= form_tag import_centres_path, multipart: true do %>


              <%if current_account.has_role? :admin%>
                  <div class="form-group">
                    <%= label_tag(:centre, "Centre", :class => 'col-sm-3 control-label') %>
                    <div class="col-sm-7">
                      <%= collection_select(:centre, :id, Centre.all,:id,:name, options ={:prompt => "Select a Centre"},{:id => 'centre_select'})%>
                    </div>

                  </div>
              <% elsif current_account.has_role? :branch_admin %>
                  <div class="form-group">
                    <%= label_tag(:centre, "Centre", :class => 'col-sm-3 control-label') %>
                    <div class="col-sm-7">
                      <%= collection_select(:centre, :id, current_account.centre.centres,:id,:name, options ={:prompt => "Select a Centre"},{:id => 'centre_select'})%>
                    </div>

                  </div>
              <%end%>
              <div class="form-group">
                <%= label_tag(:centre_type, "Centre", :class => 'col-sm-3 control-label') %>
                <div class="col-sm-7">
                  <%= collection_select(:centre_type, :id, CentreType.all,:id,:name, options ={:prompt => "Select a Centre Type"},{:id => 'centre_type_select'})%>
                </div>

              </div>

              <div class="form-group">
                <%= label_tag :file, "Browse Excel File", :class => 'col-sm-3 control-label' %>
                <div class="col-sm-6">
                  <%= file_field_tag :file, :class => 'form-control' %>
                </div>
              </div>

              <div class="line line-dashed line-lg pull-in"></div>

              <div class="form-actions center-block">
                <%= submit_tag "Import", :class => "btn btn-primary" %>
              </div>

          <% end %>

        </div>
        <p align="right"><% link_to("Download Excel Template", "https://dl-web.dropbox.com/get/CampusMitra-%20Batch_data_import.xlsx?_subject_uid=63340203&w=AADcycPbMAq-EUTtQrGApBurcpQd2CaBs9U0fkUGAhm_cA&dl=1",:class=>"btn btn-primary") %> </p>
        <br/><br />
      </div>
    </div>

  </section>
</section>


