<%= link_to "Add Staff Type", new_staff_type_path %>
<h1>Listing Staff Types</h1>
 
<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th></th>
  </tr>
 
  <% @staff_types.each do |staff_type| %>
    <tr>
      <td><%= staff_type.name %></td>
      <td><%= staff_type.description %></td>
      <td><%= link_to "Show", staff_type_path(staff_type) %>
    	  <%= link_to "Edit", edit_staff_type_path(staff_type) %>
    	  <%= link_to 'Delete', staff_type_path(staff_type), method: :delete,data: { confirm: 'Are you sure?'}%></td>
    </tr>
  
  <% end %>
</table>